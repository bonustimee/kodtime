    // Populate Section Grids
    function populateGrid(ids, list) {
      const container = document.getElementById(ids);
      list.forEach(item => {
        const card = document.createElement('div');
        card.className = 'card';
        card.innerHTML = `
          <div class="name">${item.name}</div>
          <div class="badge">${ids === 'anaGrid' ? 'ANA' : ids === 'vipGrid' ? 'VIP' : 'GÃœVENÄ°LÄ°R'}</div>
          <a href="${item.url}" target="_blank">Siteye Git</a>
        `;
        container.appendChild(card);
      });
    }
